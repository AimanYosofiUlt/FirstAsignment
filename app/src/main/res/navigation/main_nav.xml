<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/prudoctListFragment">

    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.firstdayjava.ui.fragments.EditFragment"
        android:label="fragment_edit2"
        tools:layout="@layout/fragment_edit">
        <action
            android:id="@+id/action_editFragment_to_mainRragment"
            app:destination="@id/listFragment"

            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="isFromLogin"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_editFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.firstdayjava.ui.fragments.ListFragment"
        android:label="fragment_main_rragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_mainRragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.firstdayjava.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_loginFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment2"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.firstdayjava.ui.fragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.firstdayjava.ui.fragments.MainFragment"
        android:label="fragment_main2"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_prudoctListFragment"
            app:destination="@id/prudoctListFragment" />
    </fragment>
    <fragment
        android:id="@+id/prudoctListFragment"
        android:name="com.example.firstdayjava.ui.fragments.ProductsListFragment"
        android:label="fragment_prudoct_list"
        tools:layout="@layout/fragment_prudoct_list" />
</navigation>