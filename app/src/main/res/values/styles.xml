<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textview">
        <item name="android:background">@drawable/back_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="filter_textview">
        <item name="android:background">@drawable/back_filter_ed</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/back_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button2">
        <item name="android:background">@drawable/back_button2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="buttonOpt2">
        <item name="android:background">@drawable/back_button_opt2</item>
        <item name="android:textColor">@color/primeryColor</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomBtn">
        <item name="android:background">@drawable/click_bottom_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>