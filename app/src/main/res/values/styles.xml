<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textview">
        <item name="android:background">@drawable/back_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">#0F0F0F</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="menu_textview">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_textview2">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textview2">
        <item name="android:background">@drawable/back_textview</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="filter_textview">
        <item name="android:background">@drawable/back_filter_ed</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/back_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button2">
        <item name="android:background">@drawable/back_button2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="buttonOpt2">
        <item name="android:background">@drawable/back_button_opt2</item>
        <item name="android:textColor">@color/primeryColor</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonOpt3">
        <item name="android:background">@drawable/back_button_opt3</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottomBtn">
        <item name="android:background">@drawable/click_bottom_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="cancle_button">
        <item name="android:background">@drawable/click_cancle_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>